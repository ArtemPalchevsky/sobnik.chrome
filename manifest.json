{
    "manifest_version": 2,

    "name": "Sobnik: фильтрует риелторов",
    "description": "Выявляет посредников в объявлениях по недвижимости",
    "version": "1.6",

    "icons": { 
	"128": "icon_128.png" 
    },

    "permissions": [
	"http://sobnik.com/*",
	"http://www.avito.ru/*",
	"https://www.avito.ru/*",
	"tabs",
        "pageCapture"
    ],

    "background": {
	"scripts": ["jquery.js", "api.js", "sobnik.js"]
    },
    
    "content_scripts": [
	{
	    "matches": ["http://www.avito.ru/*", "https://www.avito.ru/*"],
	    "js": ["jquery.js", "api.js", "avito.js"]
	}
    ]
}
